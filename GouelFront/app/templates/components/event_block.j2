<div class="bg-gray-200 p-4 rounded shadow">
    <h4 class="font-bold mb-2">{{ event.Title }}</h4>
    <div style="display: flex; gap:8px; justify-content: space-evenly;">
        <a href="{{ url_for('admin.manage_event', event_id=event.ID) }}"
            class="my-4 text-gray-200 border-b-4 bg-purple-600 border-purple-800 hover:bg-purple-500 hover:border-purple-700 py-2 px-4 rounded">
            Gérer
            l'événement
        </a>
        <button onclick="openModal('deleteEvent', '{{ event.ID }}')"
            class="my-4 text-gray-200 border-b-4 bg-red-600 border-red-800 hover:bg-red-500 hover:border-red-700 py-2 px-4 rounded">
            Supprimer
            l'événement
        </button>

    </div>


</div>