{% extends 'base.j2' %}

{% block title %}Connexion - Gouel{% endblock %}

{% block content %}
<div class="container mx-auto p-4 text-white">
    <div class="max-w-sm mx-auto bg-gray-900 p-8 rounded-lg">
        <h2 class="text-3xl font-bold mb-4 text-center">Connexion</h2>
        <form action="{{ url_for('main.login') }}" method="post">
            <div class="mb-4">
                <label for="email" class="block text-gray-300 mb-2">Email</label>
                <input type="email" id="email" name="email" required class="w-full px-3 py-2 rounded text-gray-900"
                    placeholder="Entrez votre email">
            </div>
            <div class="mb-6">
                <label for="password" class="block text-gray-300 mb-2">Mot de passe</label>
                <input type="password" id="password" name="password" required
                    class="w-full px-3 py-2 rounded text-gray-900" placeholder="Entrez votre mot de passe">
            </div>
            <div class="flex justify-center items-center mb-6">
                <a href="{{ url_for('main.forgot_password') }}" class="text-blue-400 hover:text-blue-300">Mot de passe
                    oublié ?</a>
            </div>
            <button type="submit"
                class="w-full justify-center flex items-center block border-b-4 bg-blue-600 border-blue-800 hover:bg-blue-500 hover:border-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300">Connexion</button>
        </form>
        <p class="text-gray-300 mt-6 text-center">Pas encore de compte ? <a href="{{ url_for('main.signin') }}"
                class="text-blue-400 hover:text-blue-300">Créez-en un.</a></p>
    </div>
</div>
{% endblock %}