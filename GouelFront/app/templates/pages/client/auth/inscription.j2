{% extends 'base.j2' %}

{% block title %}Inscription - Gouel{% endblock %}

{% block content %}
<div class="container mx-auto p-4 text-white">
    <div class="max-w-sm mx-auto bg-gray-900 p-8 rounded-lg">
        <h2 class="text-3xl font-bold mb-4 text-center">Inscription</h2>
        <form action="{{ url_for('main.signin') }}" method="post">
            <div class="mb-4">
                <label for="firstName" class="block text-gray-300 mb-2">Prénom:</label>
                <input type="text" id="firstName" name="firstName" class="w-full px-3 py-2 rounded text-gray-900">
            </div>
            <div class="mb-4">
                <label for="lastName" class="block text-gray-300 mb-2">Nom:</label>
                <input type="text" id="lastName" name="lastName" class="w-full px-3 py-2 rounded text-gray-900">
            </div>
            <div class="mb-4">
                <label for="age" class="block text-gray-300 mb-2">Âge:</label>
                <input type="date" id="age" name="age" class="w-full px-3 py-2 rounded text-gray-900">
            </div>
            <div class="mb-4">
                <label for="email" class="block text-gray-300 mb-2">Email</label>
                <input type="email" id="email" name="email" required class="w-full px-3 py-2 rounded text-gray-900"
                    placeholder="Entrez votre email">
            </div>
            <div class="mb-4">
                <label for="password" class="block text-gray-300 mb-2">Mot de passe</label>
                <input type="password" id="password" name="password" required
                    class="w-full px-3 py-2 rounded text-gray-900" placeholder="Créez votre mot de passe">
            </div>
            <div class="mb-6">
                <label for="password_confirm" class="block text-gray-300 mb-2">Confirmer le mot de passe</label>
                <input type="password" id="password_confirm" name="password_confirm" required
                    class="w-full px-3 py-2 rounded text-gray-900" placeholder="Confirmez votre mot de passe">
            </div>
            <button type="submit"
                class="w-full justify-center flex items-center block border-b-4 bg-blue-600 border-blue-800 hover:bg-blue-500 hover:border-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300">Inscription</button>
        </form>
        <p class="text-gray-300 mt-6 text-center">Déjà un compte ? <a href="{{ url_for('main.login') }}"
                class="text-blue-400 hover:text-blue-300">Connectez-vous.</a></p>
    </div>
</div>
{% endblock %}