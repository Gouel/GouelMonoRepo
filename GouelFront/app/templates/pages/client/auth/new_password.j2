{% extends 'base.j2' %}

{% block title %}Cr√©er un nouveau mot de passe - Gouel{% endblock %}

{% block content %}
<div class="container mx-auto p-4 text-white">
    <div class="max-w-sm mx-auto bg-gray-900 p-8 rounded-lg">
        <h2 class="text-3xl font-bold mb-4 text-center">Nouveau mot de passe</h2>
        <p class="mb-4 text-center">Veuillez saisir votre nouveau mot de passe.</p>
        <form action="{{ url_for('main.new_password') }}" method="post">
            <input type="hidden" name="userId" value="{{ userId }}">
            <div class="mb-4">
                <label for="password" class="block text-gray-300 mb-2">Nouveau mot de passe</label>
                <input type="password" id="password" name="password" required
                    class="w-full px-3 py-2 rounded text-gray-900" placeholder="Entrez votre nouveau mot de passe">
            </div>
            <div class="mb-6">
                <label for="password_confirm" class="block text-gray-300 mb-2">Confirmer le nouveau mot de passe</label>
                <input type="password" id="password_confirm" name="password_confirm" required
                    class="w-full px-3 py-2 rounded text-gray-900" placeholder="Confirmez votre nouveau mot de passe">
            </div>
            <button type="submit"
                class="w-full justify-center flex items-center block border-b-4 bg-blue-600 border-blue-800 hover:bg-blue-500 hover:border-blue-700 text-white font-bold py-2 px-4 rounded transition duration-300">Enregistrer</button>
        </form>
    </div>
</div>
{% endblock %}