{% extends 'base.j2' %}

{% block title %}Connexion - Admin{% endblock %}

{% block content %}
<div class="container mx-auto p-4 text-white">

    <h1 class="text-3xl font-bold text-center mb-4">Connexion au panel Administrateur</h1>

    <div class="w-full max-w-xs mx-auto">
        <form class="bg-gray-900 rounded px-8 pt-6 pb-8 mb-4" method="post" action="{{ url_for('admin.login') }}">
            <div class="mb-4">
                <label class="block text-gray-200 text-sm font-bold mb-2" for="username">Nom d'utilisateur</label>
                <input
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="username" name="username" type="text" placeholder="Nom d'utilisateur">
            </div>
            <div class="mb-6">
                <label class="block text-gray-200 text-sm font-bold mb-2" for="password">Mot de passe</label>
                <input
                    class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                    id="password" name="password" type="password" placeholder="******************">
            </div>
            <div class="flex items-center justify-between">
                <button
                    class="border-b-4 bg-purple-600 border-purple-800 hover:bg-purple-500 hover:border-purple-700 text-white font-bold py-2 px-4 rounded focus:outline-none"
                    type="submit">
                    Se connecter
                </button>
            </div>
        </form>
    </div>
</div>
{% endblock %}